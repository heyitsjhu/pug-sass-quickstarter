{
  "name": "pug-sass-quickstarter",
  "version": "0.0.1",
  "description": "A quick HTML starter using PUG and SASS.",
  "main": "index.js",
  "scripts": {
    "server": "browser-sync start -sw -f ./src --no-notify --port 9000 --startPath ./public",
    "start": "npm-run-all -p server watch-pug watch-css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-css": "node-sass-chokidar --watch ./src/scss/main.scss -o ./public",
    "watch-pug": "pug -wP ./src --out ./public"
  },
  "author": "Johnny Hu <johnny@dreamistlabs.com>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.3",
    "pug": "^2.0.3"
  }
}
