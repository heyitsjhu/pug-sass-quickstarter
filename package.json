{
  "name": "sassy-pug",
  "version": "0.0.1",
  "description": "A quick way to setup your next static HTML project using PUG and SASS",
  "main": "index.js",
  "scripts": {
    "babel": "babel --watch src/js/main.js -o public/assets/js/main.js",
    "server": "browser-sync start -sw -f ./src --no-notify --port 9000 --startPath ./public",
    "start": "npm-run-all -p babel server watch-css watch-pug",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-css": "node-sass-chokidar --watch ./src/scss/styles.scss -o ./public/assets/css",
    "watch-pug": "pug -wP -O pug-config.json ./src/pages --out ./public"
  },
  "repository": "github:heyitsjhu/sassy-pug",
  "author": "Johnny Hu <johnny@dreamistlabs.com>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.26.3",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6"
  }
}
